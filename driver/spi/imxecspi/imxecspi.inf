;Module Name:
;    imxecspi.inf
;
;Abstract:
;    INF file for installing the IMX ECSPI driver
;
;Installation Notes:
;    Using Devcon: Type "devcon update imxecspi.inf ACPI\NXP0105" to install

[Version]
Signature="$WINDOWS NT$"
Class=System
ClassGuid={4D36E97D-E325-11CE-BFC1-08002BE10318}
Provider=%MSFT%
CatalogFile=imxecspi.cat ; VS requirement to have catalog file entry

[DestinationDirs]
DefaultDestDir = 13

; ================= Class section =====================

[SourceDisksNames]
1 = %DiskId1%,,,""

[SourceDisksFiles]
imxecspi.sys  = 1,,

;*****************************************
; imxecspi  Install Section
;*****************************************

[Manufacturer]
%MSFT%=Microsoft,NT$ARCH$

; Decorated model section take precedence over undecorated 
; ones on XP and later.
[Microsoft.NT$ARCH$]
%imxecspi.0001.DeviceDesc%=imx8m_ecspi_Device,ACPI\VEN_NXP&DEV_0105&REV_0001
%imxecspi.DeviceDesc%=imxecspi_Device,ACPI\NXP0105

[imxecspi_Device.NT]
CopyFiles=Drivers_Dir

[imx8m_ecspi_Device.NT]
CopyFiles=Drivers_Dir

[Drivers_Dir]
imxecspi.sys

;-------------- Service installation
[imxecspi_Device.NT.Services]
AddService = imxecspi,%SPSVCINST_ASSOCSERVICE%, imxecspi_Service_Inst

[imx8m_ecspi_Device.NT.Services]
AddService = imxecspi,%SPSVCINST_ASSOCSERVICE%, imx8m_ecspi_Service_Inst

; -------------- imxecspi driver install sections
[imxecspi_Service_Inst]
DisplayName    = %imxecspi.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START 
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %13%\imxecspi.sys
LoadOrderGroup = Extended Base
Dependencies   = SpbCx

[imx8m_ecspi_Service_Inst]
DisplayName    = %imxecspi.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START 
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %13%\imxecspi.sys
LoadOrderGroup = Extended Base
Dependencies   = SpbCx

[imxecspi_Device.NT.HW]
Addreg=imx_ecspi_Device.NT.HW.AddReg

[imx8m_ecspi_Device.NT.HW]
Addreg=imx8m_ecspi_Device.NT.HW.AddReg

[imx_ecspi_Device.NT.HW.AddReg]
HKR,,ReferenceClockHz,0x00010001,0x03938700 ; 60Mhz

[imx8m_ecspi_Device.NT.HW.AddReg]
HKR,,ReferenceClockHz,0x00010001,0x016e3600 ; 24Mhz

[Strings]
SPSVCINST_ASSOCSERVICE= 0x00000002
MSFT = "MSFT" ; "Microsoft"
DiskId1 = "i.MX ECSPI Controller Installation Disk #1"
imxecspi.DeviceDesc = "i.MX ECSPI Controller"
imxecspi.0001.DeviceDesc = "i.MX ECSPI Controller - i.MX8M"
imxecspi.SVCDESC = "i.MX ECSPI Controller Driver"
